<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <jta-data-source>faceart_database</jta-data-source>
        <class>com.faceart.faceart.entities.User</class>
        <class>com.faceart.faceart.entities.Product</class>
        <class>com.faceart.faceart.entities.Favourite</class>
        <class>com.faceart.faceart.entities.Cart</class>
        <class>com.faceart.faceart.entities.Opinion</class>
        <class>com.faceart.faceart.entities.Comment</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:55000/faceart"/>
            <property name="jakarta.persistence.jdbc.user" value="faceart"/>
            <property name="jakarta.persistence.jdbc.password" value="faceart"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
